{
    "name": "vscode-fe",
    "displayName": "Fe",
    "description": "Ethereum Fe language support for Visual Studio Code",
    "license": "MIT",
    "version": "0.0.1",
    "keywords": [
        "Fe",
        "ethereum",
        "blockchain",
        "compiler",
        "security"
    ],
    "publisher": "mjobuda",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.20.2"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "bugs": {
        "url": "https://github.com/mjobuda/vscode-fe/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mjobuda/vscode-fe"
    },
    "activationEvents": [
        "onLanguage:fe",
        "onCommand:fe.compileContract"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "fe",
                "aliases": [
                    "Fe",
                    "fe"
                ],
                "extensions": [
                    ".fe"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fe",
                "scopeName": "source.fe",
                "path": "./syntaxes/fe.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "fe",
                "path": "./snippets/fe.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Fe (Ethereum)",
            "properties": {
                "fe.compile.onSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically compile when saving and annotate code with compile results."
                },
                "fe.mode.active": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/Disable all active components of this extension (emergency)."
                },
                "fe.decoration.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable/disable fe active syntax highlighting for security."
                },
                "fe.hover.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable/disable fe tooltips/hover information."
                },
                "fe.command": {
                    "type": "string",
                    "default": "fe",
                    "description": "Defines how to invoke the fe compiler command. This can by any shell command and the fe arguments will be passed to this command as <fe.command> <args>. Default is to assume fe is installed in PATH and executable as `fe`"
                },
                "fe.analysis.onSave": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Automatically submit the compiled bytecode to MythX for security analysis and annotate the code with the security scan results. See https://mythx.io for details"
                },
                "fe.analysis.mythx.password": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "MythX Password. See https://mythx.io to get password"
                },
                "fe.analysis.mythx.ethAddress": {
                    "type": "string",
                    "default": "initial",
                    "markdownDescription": "MetaMask ETH address used to login to MythX. Use 'trial' for trial mode. See https://mythx.io"
                }
            }
        },
        "commands": [
            {
                "command": "fe.compileContract",
                "title": "fe: Compile"
            }
        ],
        "x-keybindings": [
            {
                "key": "cmd+alt+shift+i",
                "command": "editor.action.inspectTMScopes"
            }
        ]
    },
    "scripts": {},
    "dependencies": {
        "async": "^2.6.3",
        "chai": "^4.2.0",
        "mythxjs": "^1.3.1",
        "shell-escape": "^0.2.0"
    }
}
